{%include 'breadcrumb'%}
<style>
	body, .breadcrumb {background-color: white;}
</style>
<div id="insales-section-cart" class="insales-section insales-section-cart">

					<div class="text">
						<h1 class="text-title">Корзина</h1>
					</div>
          {% if cart.items.size > 0 %}
  					<form action="/cart_items" method="post" data-cart-form>
  						<input type="hidden" name="_method" value="put">
  						<input type="hidden" name="make_order" value="">
  						<div class="row">
  							<div class="col-12 col-lg-9">
  								<div class="cart-items">
                    {%for item in cart.items%}
  										<div data-product-id="{{ item.product.id }}" data-item-id="{{ item.id }}" class="cart-item js-cart-item-{{ item.id }}">
  											<div class="row align-items-center">
  												<div class="col-12 col-md">
  													<div class="row align-items-center">
  														<div class="col-auto">
  															<a href="{{item.url}}" class="cart-item-thumb cart-item-thumb--1x1 cart-item-thumb--contain">
                                  <img class="cart-item-thumb-item" src="{{ item.product.first_image.thumb_url }}" alt="{{item.title}}" alt="{{item.title}}">
  															</a>
  														</div>
  														<div class="col">
  															<div class="cart-item-title"><a href="{{item.url}}">{{item.title}}</a></div>
                                {% if item.variant.option_values.size > 0 %}
    															<ul class="cart-item-variants list-unstyled">
                                    {% for option_value in item.variant.option_values %}
                                      <li class="cart-item-variant">
                                        <span>{{ option_value.option_name.title }}:</span> {{ option_value.title }}
                                      </li>
                                    {%endfor%}
                                  </ul>
                                {%endif%}

  														</div>
  													</div>
  												</div>
  												<div class="col-12 col-md-auto">
  													<div class="cart-item-buttons">
  														<div class="row align-items-center justify-content-end">
  															<div class="col-auto">
  																<div class="cart-item-prices">
  																	<span class="cart-item-quantity js-cart-item-quantity">1</span> × <span class="cart-item-sale_price js-cart-item-sale_price">{{item.product.price | money}}</span>
  																	<div class="cart-item-total_price js-cart-item-total_price">{{item.total_price}}</div>
  																</div>
  															</div>
  															<div class="col col-auto">
  																<div class="product-quantity">
  																	<div class="row no-gutters" data-quantity="">
  																		<div class="col col-auto">
                                        <button type="button" data-quantity-change="-1" class="button button--counter button--icon button--large"><svg class="svg-inline--fa fa-minus fa-w-14" aria-hidden="true" data-prefix="fas" data-icon="minus" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M424 318.2c13.3 0 24-10.7 24-24v-76.4c0-13.3-10.7-24-24-24H24c-13.3 0-24 10.7-24 24v76.4c0 13.3 10.7 24 24 24h400z"></path></svg>
                                        </button>
                                      </div>
  																		<div class="col">
                                        <input type="text" name="cart[quantity][{{ item.id }}]" value="1" min="1" autocomplete="off" class="input input--counter input--large">
                                      </div>
  																		<div class="col col-auto">
                                        <button type="button" data-quantity-change="1" class="button button--counter button--icon button--large">
                                          <svg class="svg-inline--fa fa-plus fa-w-14" aria-hidden="true" data-prefix="fas" data-icon="plus" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M448 294.2v-76.4c0-13.3-10.7-24-24-24H286.2V56c0-13.3-10.7-24-24-24h-76.4c-13.3 0-24 10.7-24 24v137.8H24c-13.3 0-24 10.7-24 24v76.4c0 13.3 10.7 24 24 24h137.8V456c0 13.3 10.7 24 24 24h76.4c13.3 0 24-10.7 24-24V318.2H424c13.3 0 24-10.7 24-24z"></path></svg>
                                        </button>
                                      </div>
  																		<div class="col-auto">
  																			<button type="button" class="button button--empty button--icon button--large button--remove" data-item-delete="{{ item.id }}">
                                          <svg class="svg-inline--fa fa-trash fa-w-16 fa-lg" aria-hidden="true" data-prefix="far" data-icon="trash" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M381.6 80l-34-56.7C338.9 8.8 323.3 0 306.4 0H205.6c-16.9 0-32.5 8.8-41.2 23.3l-34 56.7H40c-13.3 0-24 10.7-24 24v12c0 6.6 5.4 12 12 12h16.4L76 468.4c2.3 24.7 23 43.6 47.8 43.6h264.5c24.8 0 45.5-18.9 47.8-43.6L467.6 128H484c6.6 0 12-5.4 12-12v-12c0-13.3-10.7-24-24-24h-90.4zm-176-32h100.8l19.2 32H186.4l19.2-32zm182.6 416H123.8L92.6 128h326.7l-31.1 336z"></path></svg>
                                        </button>
  																		</div>
  																	</div>
  																</div>
  															</div>
  														</div>
  													</div>
  												</div>
  											</div>
  										</div>
                    {%endfor%}

  								</div>
  							</div>
  							<div class="col-12 col-lg-3">
  								<div class="cart-sidebar">
  									<div class="cart-order">
  										<div class="cart-order-items">
  											<div class="cart-order-item cart-order-item-total_price">ИТОГО: <span class="cart-order-total_price js-cart-order-total_price">1 500 ₽</span></div>
												{% for discount in cart.discounts %}
													<div class="cart-order-item cart-order-item-discounts js-cart-order-item-discounts">
														В т.ч. скидка:
														<span class="js-cart-order-item-discounts-amount">{{ discount.amount | money }}</span>
														<p class="js-cart-order-item-discounts-description">{{ discount.description }}</p>
													</div>
												{%endfor%}
  										</div>
											{%if cart.enable_coupon?%}
  											<div class="cart-order-coupon">
  												<label>Промокод или купон на скидку:</label>
  												<div class="row no-gutters">
  													<div class="col">
															<input type="text" name="cart[coupon]" value="" class="input input--block">
														</div>
  													<div class="col-auto">
															<button type="button" class="button button--empty button--icon" data-coupon-submit="">
																<svg class="svg-inline--fa fa-check fa-w-16 fa-lg" aria-hidden="true" data-prefix="far" data-icon="check" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M435.848 83.466L172.804 346.51l-96.652-96.652c-4.686-4.686-12.284-4.686-16.971 0l-28.284 28.284c-4.686 4.686-4.686 12.284 0 16.971l133.421 133.421c4.686 4.686 12.284 4.686 16.971 0l299.813-299.813c4.686-4.686 4.686-12.284 0-16.971l-28.284-28.284c-4.686-4.686-12.284-4.686-16.97 0z"></path></svg>
															</button>
														</div>
  												</div>
													{% if cart.invalid_coupon? %}
  													<p class="cart-order-coupon-error js-cart-order-coupon-error">{{ cart.coupon_error }}</p>
													{%endif%}
  											</div>
											{%endif%}

  										<div class="cart-order-buttons">
  											<input type="submit" value="Оформить заказ" data-cart-submit="" class="button button--primary button--block button--large">
  										</div>
  									</div>
  								</div>
  							</div>
  						</div>
  					</form>
          {%endif%}

			</div>
